# FSBO Scraper Configuration
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_PATH=data/fsbo_listings.db
EXPORT_DIR=exports

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/scraper.log

# Scraping Behavior
# Delays in seconds between requests
MIN_REQUEST_DELAY=1.0
MAX_REQUEST_DELAY=5.0

# Request settings
REQUEST_TIMEOUT=10
MAX_RETRIES=3
RETRY_BACKOFF=2.0

# Rate Limiting
# Maximum requests per domain per minute
MAX_REQUESTS_PER_MINUTE=60

# Browser Automation (for JS-rendered pages)
HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000

# Thanks.io Integration
THANKS_IO_API_KEY=
THANKS_IO_CAMPAIGN_ID=

# Enable/Disable Specific Scrapers
# Set to false to skip a scraper
ENABLE_FSBO_COM=true
ENABLE_ZILLOW_FSBO=true
ENABLE_CRAIGSLIST_HOUSING=true
