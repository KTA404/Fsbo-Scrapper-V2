{
  "sites": [
    {
      "name": "FSBO.com",
      "scraper": "fsbo_com",
      "enabled": true,
      "description": "The largest national FSBO marketplace",
      "min_delay": 0.5,
      "max_delay": 1.0,
      "max_listings": 200,
      "scrape_url": ["https://fsbo.com/", "https://fsbo.com/listings/search/results/?state=CO"],
      "allowed_states": ["CO"],
      "notes": "Colorado-only search results; check robots.txt before large-scale scraping"
    },
    {
      "name": "FSBO Landing Pages",
      "scraper": "fsbo_landing",
      "enabled": true,
      "description": "Generic FSBO landing pages across the web",
      "min_delay": 1.0,
      "max_delay": 3.0,
      "max_listings": 200,
      "landing_urls": [],
      "landing_search_queries": [
        "FSBO listings for sale by owner Colorado",
        "FSBO homes for sale by owner Colorado"
      ],
      "max_search_results": 200,
      "landing_allowlist": [],
      "landing_blacklist": ["zillow.com", "trulia.com", "realtystore.com"],
      "landing_allowed_states": ["CO"],
      "notes": "Uses search to discover landing pages when landing_urls is empty"
    }
  ],
  "thanks_io": {
    "enabled": false,
    "api_key": "YOUR_THANKS_IO_API_KEY",
    "campaign_id": "YOUR_CAMPAIGN_ID",
    "description": "Thanks.io postcard campaign integration"
  },
  "export": {
    "format": "csv",
    "delimiter": ",",
    "encoding": "utf-8",
    "include_fields": [
      "id",
      "street",
      "city",
      "state",
      "zip_code",
      "listing_url",
      "source_website",
      "scraped_at"
    ]
  },
  "scraping": {
    "min_request_delay": 1.0,
    "max_request_delay": 5.0,
    "request_timeout": 10,
    "max_retries": 3,
    "retry_backoff_factor": 2.0,
    "max_requests_per_minute": 60,
    "respect_robots_txt": true
  }
}
